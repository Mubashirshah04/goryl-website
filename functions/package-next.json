{
  "name": "zaillisy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:full": "node start-goryl.js",
    "build": "set NODE_OPTIONS=--max-old-space-size=8192 && next build",
    "build:ssr": "next build && xcopy /E /I /Y .next functions\\.next && xcopy /E /I /Y public functions\\public",
    "build:firebase": "node build-nextjs.js",
    "copy:next": "node copy-next-to-functions.js",
    "copy:env": "copy .env.local functions\\.env",
    "predeploy": "npm run build && npm run copy:next",
    "deploy": "npm run predeploy && firebase deploy --only functions,hosting",
    "deploy:ssr": "deploy-ssr.bat",
    "deploy:full": "npm run build && npm run copy:next && firebase deploy",
    "deploy:functions": "firebase deploy --only functions:nextjs",
    "deploy:hosting": "firebase deploy --only hosting",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:e2e": "playwright test",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy-storage": "node scripts/deploy-storage-rules.js",
    "firebase:fix-indexes": "tsx src/scripts/resolveStuckIndexes.ts",
    "firebase:auto-fix-indexes": "tsx src/scripts/autoFixIndexes.ts",
    "firebase:deploy-indexes": "tsx src/scripts/deployIndexes.ts"
  },
  "dependencies": {
    "@stripe/stripe-js": "^3.5.0",
    "@supabase/supabase-js": "^2.45.4",
    "@tanstack/react-query": "^5.85.3",
    "browser-image-compression": "^2.0.2",
    "firebase": "^10.14.1",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "sonner": "^2.0.7",
    "stripe": "^14.25.0",
    "zod": "^3.25.76",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.11",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "10.4.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.4.6",
    "fs-extra": "^11.3.2",
    "postcss": "8.4.0",
    "tailwindcss": "3.4.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
