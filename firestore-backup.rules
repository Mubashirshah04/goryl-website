rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isSeller() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['seller', 'brand', 'company'];
    }
    
    function isApprovedSeller() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['seller', 'brand', 'company'] &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'approved';
    }
    
    function isValidUser() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status in ['active', 'approved'];
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId) && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Products collection
    match /products/{productId} {
      allow read: if resource.data.status == 'active' || isOwner(resource.data.sellerId) || isAdmin();
      allow create: if isApprovedSeller() && request.auth.uid == request.resource.data.sellerId;
      allow update: if isOwner(resource.data.sellerId) || isAdmin();
      allow delete: if isOwner(resource.data.sellerId) || isAdmin();
    }

    // Categories collection
    match /categories/{categoryId} {
      allow read: if resource.data.isActive == true || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // Orders collection
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.userId) || 
                     isOwner(resource.data.sellerId) || 
                     isAdmin();
      allow create: if isValidUser() && request.auth.uid == request.resource.data.userId;
      allow update: if isOwner(resource.data.sellerId) || 
                       isOwner(resource.data.userId) || 
                       isAdmin();
      allow delete: if isAdmin();
    }

    // Cart collection
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if resource.data.status == 'active' || isOwner(resource.data.userId) || isAdmin();
      allow create: if isValidUser() && request.auth.uid == request.resource.data.userId;
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Comments collection
    match /comments/{commentId} {
      allow read: if resource.data.status == 'active' || isOwner(resource.data.userId) || isAdmin();
      allow create: if isValidUser() && request.auth.uid == request.resource.data.userId;
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Likes collection
    match /likes/{likeId} {
      allow read: if isAuthenticated();
      allow create: if isValidUser() && request.auth.uid == request.resource.data.userId;
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read, update: if isOwner(resource.data.userId);
      allow create: if isAuthenticated();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Reports collection
    match /reports/{reportId} {
      allow read: if isAdmin();
      allow create: if isValidUser() && request.auth.uid == request.resource.data.reporterId;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // User interactions for social algorithm
    match /userInteractions/{interactionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
      allow update: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    // Payments collection
    match /payments/{paymentId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isValidUser() && request.auth.uid == request.resource.data.userId;
      allow update: if isAdmin();
    }

    // Payouts collection
    match /payouts/{payoutId} {
      allow read: if isOwner(resource.data.sellerId) || isAdmin();
      allow create: if isApprovedSeller() && request.auth.uid == request.resource.data.sellerId;
      allow update: if isAdmin();
    }

    // Chat messages collection
    match /chats/{chatId}/messages/{messageId} {
      allow read, create: if isAuthenticated() && 
        (request.auth.uid in resource.data.participants || 
         request.auth.uid in request.resource.data.participants);
      allow update, delete: if isOwner(resource.data.senderId) || isAdmin();
    }

    // Chat rooms collection
    match /chats/{chatId} {
      allow read, create: if isAuthenticated() && 
        (request.auth.uid in resource.data.participants || 
         request.auth.uid in request.resource.data.participants);
      allow update: if isAuthenticated() && 
        (request.auth.uid in resource.data.participants || isAdmin());
    }

    // Wishlist collection
    match /wishlists/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Analytics collection (admin only)
    match /analytics/{document} {
      allow read, write: if isAdmin();
    }

    // Admin settings collection
    match /admin/{document} {
      allow read, write: if isAdmin();
    }

    // Seller applications collection
    match /sellerApplications/{applicationId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isValidUser() && request.auth.uid == request.resource.data.userId;
      allow update: if isAdmin();
    }

    // Product variants collection
    match /productVariants/{variantId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isApprovedSeller() && 
        request.auth.uid == get(/databases/$(database)/documents/products/$(request.resource.data.productId)).data.sellerId;
    }

    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}